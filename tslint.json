{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "no-console": {
            "severity": "off",
            "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
        },
        "no-namespace": false,
        "max-classes-per-file":{
            "severity": "off"
        },
        "max-line-length": {
            "options": {"limit": 150}
        }

    },
    "rulesDirectory": []
}